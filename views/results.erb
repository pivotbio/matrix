<table border="1">
<% for row in 0..8 %>
	<tr>
	<% if row == 0 %>
		<td></td><td>1</td><td>2</td><td>3</td><td>4</td>
		<td>5</td><td>6</td><td>7</td><td>8</td> <td>9</td>
		<td>10</td><td>11</td><td>12</td>
	<% else %>
		<% for column in 0..12 %>
			<% if column == 0 %>
				<td><%= @letters[row] %></td>			
			<% else %>
				<td><%= @codes[(row-1)+(column-1)*8]%></td>
			<% end %>
		<% end %>
	<% end %>
	</tr>
<% end %>
</table>

<table border="1">
		<% for row in 1..8 %>
			<% for column in 1..12 %>
				<tr>
					<td><%= @letters[row] %><%= column %></td>
					<td><%= @codes[(row-1)+(column-1)*8] %></td>
				</tr>
			<% end %>
		<% end %>
</table>


