<table class="table table-striped table-condensed">

<% for row in 0..8 %>
	<tr>
	<% if row == 0 %>
      <th></th>
      <th>1</th>
      <th>2</th>
      <th>3</th>
      <th>4</th>
      <th>5</th>
      <th>6</th>
      <th>7</th>
      <th>8</th>
      <th>9</th>
      <th>10</th>
      <th>11</th>
      <th>12</th>
	<% else %>
		<% for column in 0..12 %>
			<% if column == 0 %>
				<th><%= @letters[row] %></th>
			<% else %>
				<td><%= @codes[(row-1)+(column-1)*8]%></td>
			<% end %>
		<% end %>
	<% end %>
	</tr>
<% end %>
</table>

<table class="table table-striped table-condensed">
<% for row in 1..8 %>
    <% for column in 1..12 %>
        <tr>
            <th><%= @letters[row] %><%= column %></th>
            <td><%= @codes[(row-1)+(column-1)*8] %></td>
        </tr>
    <% end %>
<% end %>
</table>


